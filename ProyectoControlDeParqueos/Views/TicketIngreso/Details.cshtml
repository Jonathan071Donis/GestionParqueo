@model ProyectoControlDeParqueos.Models.TicketIngreso

@{
    // ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Detalles del Ticket de Ingreso</h1>

<hr />
<div>
    <dl class="row">
        <dt class="col-sm-3" style="color:black;">
            @Html.DisplayNameFor(model => model.Cliente) Cliente
        </dt>
        <dd class="col-sm-9" style="color:black;">
            @Html.DisplayFor(model => model.Cliente.nombreCompleto)
        </dd>

        <dt class="col-sm-3" style="color:black;">
            @Html.DisplayNameFor(model => model.RegistroVehiculo) Vehículo
        </dt>
        <dd class="col-sm-9" style="color:black;">
            @Html.DisplayFor(model => model.RegistroVehiculo.placa)
        </dd>

        <dt class="col-sm-3" style="color:black;">
            @Html.DisplayNameFor(model => model.Parqueo) Parqueo
        </dt>
        <dd class="col-sm-9" style="color:black;">
            @Html.DisplayFor(model => model.Parqueo.nombreParqueo)
        </dd>

        <dt class="col-sm-3" style="color:black;">
            @Html.DisplayNameFor(model => model.fechaIngreso) Fecha de Ingreso
        </dt>
        <dd class="col-sm-9" style="color:black;">
            @Html.DisplayFor(model => model.fechaIngreso)
        </dd>

        <dt class="col-sm-3" style="color:black;">
            @Html.DisplayNameFor(model => model.estado) Estado
        </dt>
        <dd class="col-sm-9" style="color:black;">
            @Html.DisplayFor(model => model.estado)
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.idTicketIngreso">Editar</a> <!-- Botón Editar -->
    <a class="btn btn-secondary" asp-action="Index">Regresar al listado</a> <!-- Botón Regresar -->
</div>
