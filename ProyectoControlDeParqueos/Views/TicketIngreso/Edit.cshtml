@model ProyectoControlDeParqueos.Models.TicketIngreso

@{
    // ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Editar Ticket de Ingreso</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idTicketIngreso" />

            <div class="form-group mb-3">
                <label asp-for="ClienteId" class="form-label" style="color:black;">Cliente</label>
                <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RegistroVehiculoId" class="form-label" style="color:black;">Vehículo Registrado</label>
                <select asp-for="RegistroVehiculoId" class="form-select" asp-items="ViewBag.RegistroVehiculoId"></select>
                <span asp-validation-for="RegistroVehiculoId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="idParqueo" class="form-label" style="color:black;">Parqueo</label>
                <select asp-for="idParqueo" class="form-select" asp-items="ViewBag.idParqueo"></select>
                <span asp-validation-for="idParqueo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="fechaIngreso" class="form-label" style="color:black;">Fecha de Ingreso</label>
                <input asp-for="fechaIngreso" class="form-control" />
                <span asp-validation-for="fechaIngreso" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <input class="form-check-input" asp-for="estado" />
                <label class="form-check-label" style="color:black;">
                    @Html.DisplayNameFor(model => model.estado) Activo
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" /> <!-- Cambiado a un botón verde -->
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Regresar al listado</a> <!-- Botón para regresar -->
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
