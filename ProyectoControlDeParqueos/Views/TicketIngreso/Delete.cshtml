@model ProyectoControlDeParqueos.Models.TicketIngreso

@{
    // ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Eliminar</h1>

<h3 class="text-center mb-4">¿Estás seguro de que deseas eliminar este registro?</h3>
<div class="container">
    <h4 class="text-center">Ticket de Ingreso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="color:black;">
            @Html.DisplayNameFor(model => model.Cliente) Cliente
        </dt>
        <dd class="col-sm-10" style="color:black;">
            @Html.DisplayFor(model => model.Cliente.idCliente)
        </dd>
        <dt class="col-sm-2" style="color:black;">
            @Html.DisplayNameFor(model => model.RegistroVehiculo) Vehículo
        </dt>
        <dd class="col-sm-10" style="color:black;">
            @Html.DisplayFor(model => model.RegistroVehiculo.idRegistroVehiculo)
        </dd>
        <dt class="col-sm-2" style="color:black;">
            @Html.DisplayNameFor(model => model.Parqueo) Parqueo
        </dt>
        <dd class="col-sm-10" style="color:black;">
            @Html.DisplayFor(model => model.Parqueo.idParqueo)
        </dd>
        <dt class="col-sm-2" style="color:black;">
            @Html.DisplayNameFor(model => model.fechaIngreso) Fecha de Ingreso
        </dt>
        <dd class="col-sm-10" style="color:black;">
            @Html.DisplayFor(model => model.fechaIngreso)
        </dd>
        <dt class="col-sm-2" style="color:black;">
            @Html.DisplayNameFor(model => model.estado) Estado
        </dt>
        <dd class="col-sm-10" style="color:black;">
            @Html.DisplayFor(model => model.estado)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="idTicketIngreso" />
        <div class="text-center">
            <input type="submit" value="Eliminar" class="btn btn-danger me-2" /> <!-- Botón Eliminar -->
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a> <!-- Botón Volver -->
        </div>
    </form>
</div>
