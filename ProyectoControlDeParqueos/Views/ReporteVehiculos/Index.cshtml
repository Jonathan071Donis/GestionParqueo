@model ProyectoControlDeParqueos.Models.ReporteVehiculos

<style>
    /* Estilo general */
    body {
        font-family: Arial, sans-serif;
        font-size: 14px;
    }

    .container {
        max-width: 210mm;
        margin: 0 auto;
        padding: 20px;
        background-color: white;
        border: 1px solid #ddd;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 24px;
        font-weight: bold;
    }

    p.lead {
        font-size: 18px;
        font-weight: normal;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        margin-bottom: 20px;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        border: 1px solid #ddd;
        text-align: center;
        font-size: 14px;
    }

    th {
        background-color: #007bff;
        color: white;
        font-weight: bold;
    }

    td {
        background-color: #f8f9fa;
    }

    .btn {
        font-size: 14px;
        padding: 10px 20px;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    .text-center {
        text-align: center;
    }
</style>

<div class="container my-5 p-4 border rounded shadow">
    <div class="text-center mb-4">
        <h1 class="display-4">Reporte de Vehículos Registrados</h1>
        <p class="lead">Lista de todos los vehículos registrados</p>
        <hr class="my-4">

       

        <!-- Botón para descargar el reporte en PDF -->
        <a asp-action="ExportarPDF" class="btn btn-success">Descargar a PDF</a>
    </div>

    <!-- Tabla de vehículos registrados -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-sm">
            <thead class="table-dark">
                <tr>
                    <th>Placa</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Color</th>
                    <th>Fecha de Ingreso</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vehiculo in Model.Vehiculos)
                {
                    <tr>
                        <td>@vehiculo.placa</td>
                        <td>@vehiculo.marca</td>
                        <td>@vehiculo.modelo</td>
                        <td>@vehiculo.color</td>
                        <td>@vehiculo.fechaIngreso.ToShortDateString()</td>
                        <td>@(vehiculo.estado ? "Activo" : "Inactivo")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Estilos generales para impresión */
    body {
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 210mm;
        padding: 10mm;
    }

    h1, h2 {
        font-weight: bold;
        page-break-after: avoid;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        display: table-header-group;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #007bff;
        color: white;
    }

    tr {
        page-break-inside: avoid;
    }
</style>
